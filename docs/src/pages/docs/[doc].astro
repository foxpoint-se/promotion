---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const shorten = (str: string, maxLen: number, separator = " ") => {
  if (str.length <= maxLen) return str;
  return str.substring(0, str.lastIndexOf(separator, maxLen));
};

export async function getStaticPaths() {
  const docs = await getCollection("docs");
  return docs.map((entry) => ({
    params: { doc: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const description = shorten(entry.body, 155) + "...";
---

<Layout title={entry.data.title} description={description}>
  <main>
    <article class="px-md mb-xl max-w-3xl mx-auto">
      <Content />
    </article>
  </main>
</Layout>
